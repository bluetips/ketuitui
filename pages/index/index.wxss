@charset "UTF-8";

[v-cloak] {
    display: none!important;
}

.win {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,0.75);
}

.win .winPic {
    max-width: 550rpx;
    margin-top: 60rpx;
}

.win icon {
    font-size: 80rpx;
    color: #ffffff;
    margin-top: 20rpx;
}

.content {
    min-height: 100vh;
    text-align: center;
    padding-top: 16rpx;
}

.btn-items {
    padding: 30rpx 0;
}

.vipBtn {
    position: fixed;
    bottom: 30rpx;
    right: 30rpx;
    z-index: 999;
    font-size: 24rpx;
    text-align: center;
    background: #ffffff;
    border-radius: 10rpx;
    padding: 20rpx;
    color: #ffaa25;
    box-shadow: 5px 5px 8px #ddd;
}

.vipBtn view {
    font-size: 72rpx;
}

.copyright {
    font-size: 24rpx;
    color: #aaaaaa;
    padding-bottom: 20rpx;
    line-height: 40rpx;
}

.logo {
    height: 200rpx;
    width: 200rpx;
    margin-top: 200rpx;
}

.title {
    font-size: 36rpx;
    color: #8f8f94;
}

.tab-view {
    margin-bottom: 20rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}

.scroll-view_H {
    white-space: nowrap;
    width: 100%;
}

.scroll-view_H .scroll-view-item_H {
    display: inline-block;
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    font-size: 36rpx;
}

.fix-top {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 99;
    border-bottom: 1rpx solid #ebebeb;
}

.list-margin {
    margin-top: 74rpx;
}

.product-lists {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 8rpx;
}

.product-img {
    display: inline-block;
}

.product-img image {
    width: 242rpx;
    height: 168rpx;
    border-radius: 10rpx;
}

.product-detail {
    position: relative;
    padding: 0 14rpx;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    text-align: left;
}

.product-detail-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-size: 30rpx;
    font-weight: bold;
}

.product-detail-tag {
    height: 30rpx;
    padding: 0;
    margin: 0 10rpx 0 0;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
}

.product-detail-yuan {
    display: inline;
    font-size: 26rpx;
    vertical-align: middle;
    font-weight: bold;
}

.product-detail-price {
    padding: 10rpx 0;
    color: #ff533a;
}

.product-detail-price-earn {
    display: inline-block;
    margin: 0 20rpx;
    vertical-align: middle;
    height: 36rpx;
    border: 3rpx solid #ff393b;
    border-radius: 7rpx;
    font-size: 20rpx;
}

.product-detail-price-earn-text {
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    color: #fff;
    background: #ff393b;
}

.product-detail-price-earn-num {
    display: inline;
    padding: 0 5rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    font-weight: 600;
    color: #ff393b;
}

.product-detail-num {
    display: inline;
    vertical-align: bottom;
    font-size: 36rpx;
    font-weight: bold;
}

.product-detail-sale {
    color: #CCCCCC;
    font-size: 20rpx;
}

.product-detail-recommend {
    position: absolute;
    bottom: 0;
    right: 0;
    display: inline-block;
    width: 170rpx;
    height: 48rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 48rpx;
    color: #fff;
    border-radius: 10rpx;
    background: #ff393b;
}

.none-data-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 350rpx;
    top: 65%;
}

.none-data-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    top: 82%;
    color: #999;
    font-size: 30rpx;
}

.iconbanner {
    width: 340rpx;
    height: 140rpx;
    border-radius: 15rpx;
}

.bannernav {
    background: #fff;
    padding: 18rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
}

.detail-earn {
    height: 350rpx;
    background: #ff393b;
    padding: 30rpx;
    color: #fff;
}

.detail-earn-show {
    background: #f7f7f7;
}

.detail-earn-show-list {
    background: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: baseline;
    -ms-flex-align: baseline;
    align-items: baseline;
}

.detail-earn-show-item {
    position: relative;
    margin: 0 30rpx;
    padding: 20rpx 0;
    font-size: 35rpx;
}