@charset "UTF-8";

.detail-rule {
    margin: 30rpx 30rpx;
    padding: 30rpx;
    border-radius: 10rpx;
    border: 1rpx solid #c9c86e;
    background: #fff9ea;
}

.detail-rule-title {
    display: inline;
    font-size: 30rpx;
    line-height: 30rpx;
}

.detail-rule-text {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #8f8f94;
}

.qrimg {
    position: absolute;
    left: -9999px;
    overflow: hidden;
}

.preimage {
    width: 600rpx;
    height: 600rpx;
}

.cont {
    text-align: center;
    color: #999;
    font-size: 30rpx;
    position: absolute;
    bottom: 50rpx;
    left: 0;
    bottom: 50rpx;
    right: 0;
}

.cont view {
    margin-bottom: 10rpx;
}

.savepimage {
    background: #FF3838;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    width: 80%;
    color: #fff;
    border-radius: 40rpx;
    font-size: 32rpx;
    margin: 20rpx auto;
}

.imageContainer {
    width: 100%;
    height: 890rpx;
    background-color: #fff;
    margin-top: 100rpx;
}

.swiperitem {
    height: 600rpx;
    text-align: center;
    padding: 0rpx 20rpx;
    box-sizing: border-box;
    position: relative;
}

.swiperitem .swiperText {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    position: absolute;
    top: 56rpx;
    left: 51rpx;
    z-index: 998;
    width: 162rpx;
    height: 600rpx;
    background: white;
    border-radius: 8rpx;
    padding: 10rpx;
}

.swiperitem .swiperText .name {
    font-size: 26rpx;
    font-weight: 500;
    color: #fd395b;
    line-height: 37rpx;
    margin-bottom: 10rpx;
}

.swiperitem .swiperText .zq,.swiperitem .swiperText .cz {
    font-size: 20rpx;
    color: #fd395b;
    line-height: 35rpx;
}

.swiperitem .swiperText .addNl {
    width: 120rpx;
    height: 26rpx;
    background: #fd395b;
    border-radius: 13rpx;
    font-size: 20rpx;
    font-weight: 500;
    color: white;
    text-align: center;
    line-height: 26rpx;
    margin-top: 10rpx;
}

.itemImg {
    left: 0;
    position: absolute;
    width: 100%;
    height: 600rpx;
    border-radius: 15rpx;
    z-index: 5;
    opacity: 0.7;
    top: 5%;
    box-shadow: 0px 4rpx 15rpx 0px rgba(153,153,153,0.24);
}

.swiperactive {
    opacity: 1;
    z-index: 10;
    left: 0;
    right: 0;
    margin: 0 auto;
    transition: all .2s ease-in 0s;
    animation: myfirst .3s;
}

.qrcode {
    width: 480rpx;
    height: 480rpx;
    top: 12%;
}

@keyframes myfirst {
    from {
        transform: scale(0.8);
    }

    to {
        transform: scale(1);
    }
}

@-webkit-keyframes myfirst {
    from {
        transform: scale(0.8);
    }

    to {
        transform: scale(1);
    }
}