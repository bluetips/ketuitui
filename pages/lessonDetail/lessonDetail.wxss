@charset "UTF-8";

.detail-banner {
    width: 100%;
    height: 348rpx;
}

.detail-banner image {
    width: 100%;
    height: 348rpx;
}

.qrimg {
    position: absolute;
    left: -9999px;
    overflow: hidden;
}

.myCanvas {
    width: 750px;
    height: 1333px;
    position: absolute;
    left: -9999px;
    overflow: hidden;
    top: 0;
}

.detail-content {
    padding: 30rpx 30rpx;
}

.detail-title {
    font-size: 32rpx;
    color: #303133;
    font-weight: bold;
}

.product-detail-tag {
    height: 30rpx;
    padding: 0;
    margin: 0 10rpx 0 0;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
}

.product-detail-price {
    padding: 10rpx 0;
    color: #ff533a;
}

.product-detail-price-earn {
    display: inline-block;
    margin: 0 20rpx;
    vertical-align: middle;
    height: 40rpx;
    border: 3rpx solid #ff393b;
    border-radius: 7rpx;
    font-size: 20rpx;
}

.product-detail-price-earn-text {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
    background: #ff393b;
}

.product-detail-price-earn-num {
    display: inline;
    padding: 0 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-weight: 600;
    color: #ff393b;
}

.product-detail-yuan {
    display: inline;
    font-size: 20rpx;
    vertical-align: middle;
    font-weight: 600;
}

.product-detail-num {
    display: inline;
    vertical-align: bottom;
    font-weight: 600;
}

.detail-through-price {
    display: inline;
    font-size: 30rpx;
    color: #8f8f94;
    text-decoration: line-through;
    vertical-align: text-top;
}

.detail-hasSale {
    display: inline;
    float: right;
    font-size: 26rpx;
    color: #CCCCCC;
}

.detail-rule {
    margin: 30rpx 0;
    padding: 30rpx;
    border-radius: 10rpx;
    border: 1rpx solid #c9c86e;
    background: #fff9ea;
}

.detail-rule-title {
    margin-left: 20rpx;
    display: inline;
    font-size: 30rpx;
    line-height: 30rpx;
}

.detail-rule-text {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #8f8f94;
}

.coin-icon {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}

.detail-imgs {
    position: relative;
    margin-top: 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.detail-imgs-showall {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 180rpx;
    color: #FFFFFF;
    text-align: center;
    font-size: 26rpx;
    font-weight: bold;
    padding-top: 75rpx;
    box-sizing: border-box;
    background: -webkit-gradient(linear,left top,left bottom,from(transparent),to(rgba(0,0,0,0.6)));
    background: -o-linear-gradient(top,transparent,rgba(0,0,0,0.6));
    background: linear-gradient(180deg,transparent,rgba(0,0,0,0.6));
}

.detail-imgs-showall .icon-down {
    position: relative;
    display: block;
    width: 30rpx;
    height: 30rpx;
    margin: 0 auto;
}

.detail-imgs-showall .icon-down::before {
    content: '';
    position: absolute;
    top: 0;
    left: 4rpx;
    width: 20rpx;
    height: 20rpx;
    transform: rotate(-45deg);
    border-left: 4rpx solid #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

.detail-imgs-showall .icon-down::after {
    content: '';
    position: absolute;
    top: 20rpx;
    left: 4rpx;
    width: 20rpx;
    height: 20rpx;
    transform: rotate(-45deg);
    border-left: 4rpx solid #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

.detail-imgs-showall .icon-up {
    position: relative;
    display: block;
    width: 30rpx;
    height: 30rpx;
    margin: 0 auto;
}

.detail-imgs-showall .icon-up::before {
    content: '';
    position: absolute;
    top: 20rpx;
    left: 4rpx;
    width: 20rpx;
    height: 20rpx;
    transform: rotate(135deg);
    border-left: 4rpx solid #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

.detail-imgs-showall .icon-up::after {
    content: '';
    position: absolute;
    top: 40rpx;
    left: 4rpx;
    width: 20rpx;
    height: 20rpx;
    transform: rotate(135deg);
    border-left: 4rpx solid #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

.img-list {
    display: -webkit-box;
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    justify-content: flex-start;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    white-space: nowrap;
    padding: 37rpx 0;
}

.img-list-item {
    position: relative;
    background-color: #F7F7F7;
    width: 200rpx;
    height: 365rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
    overflow: hidden;
}

.img-list-item image {
    width: 100%;
    height: 100%;
}

.img-list-item .select {
    position: absolute;
    display: block;
    width: 48rpx;
    height: 48rpx;
    bottom: 20rpx;
    right: 20rpx;
    background-color: #606165;
    border-radius: 50%;
}

.img-list-item .select::after {
    content: '';
    position: absolute;
    top: 15rpx;
    left: 12rpx;
    width: 20rpx;
    height: 10rpx;
    transform: rotate(-45deg);
    border-left: 4rpx solid #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
}

.img-list-item .bg-red {
    background-color: #FF3938;
}

.btn-showinfo {
    color: #303133;
    font-size: 26rpx;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
}

.copy-area {
    position: relative;
    background-color: #F7F7F7;
    border-radius: 30rpx;
    margin-top: 30rpx;
    padding: 30rpx;
    padding-right: 164rpx;
    font-size: 26rpx;
}

.copy-area .btn-copy {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 26rpx;
    color: #FF3938;
}

.btn-save-all,.btn-save-select {
    height: 72rpx;
    width: 420rpx;
    border-radius: 50rpx;
    line-height: 72rpx;
    font-size: 30rpx;
    text-align: center;
    margin: 0 auto;
}

.btn-save-all {
    margin-top: 60rpx;
    background-color: #FF3938;
    color: #FFFFFF;
}

.btn-save-select {
    margin-top: 20rpx;
    background-color: #FFFFFF;
    color: #FF3938;
    border: 2rpx solid #FF3938;
}

