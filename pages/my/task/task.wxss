@charset "UTF-8";

.task_lists {
    padding-bottom: 30rpx;
}

.task_lists .item {
    padding: 30rpx 30rpx 0;
    font-size: 28rpx;
    overflow: hidden;
}

.task_lists .item .pic {
    position: relative;
}

.task_lists .item .pic image {
    width: 100%;
}

.task_lists .item .pic .title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0,0,0,0.7);
    height: 60rpx;
    color: #ffffff;
    line-height: 60rpx;
    padding-left: 10rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.task_lists .item .pic .title .t {
    -webkit-box-flex: 1;
    flex: 1;
}

.task_lists .item .pic .title rich-text {
    display: inline-block;
    margin-right: 10rpx;
}

.task_lists .item .desc {
    margin-top: 16rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.task_lists .item .desc view {
    -webkit-box-flex: 1;
    flex: 1;
}

.task_lists .item .take {
    -webkit-box-flex: 0.4!important;
    flex: 0.4!important;
    text-align: right;
    padding-right: 10rpx;
}