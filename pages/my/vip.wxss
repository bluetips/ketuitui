@charset "UTF-8";

.vip .open {
    padding: 0 25rpx 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.vip .open button {
    font-size: 28rpx;
}

.vip .open-task {
    -webkit-box-flex: 1;
    flex: 1;
    margin: 0 8rpx 0 12rpx;
}

.vip .open-buy {
    -webkit-box-flex: 1.55;
    flex: 1.55;
    margin: 0 8rpx 0 12rpx;
}

.vip .open-buy button {
    font-size: 28rpx;
}

.vip button {
    font-size: 30rpx;
}

.uni-card__header-extra-text {
    color: #ff0000;
    font-size: 36rpx;
}

.notsupport {
    color: gray;
    opacity: 0.75;
}

.mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    opacity: 0.75;
    background-color: #000000;
    z-index: 98;
}

.promote_sn_box {
    position: fixed;
    z-index: 99;
    left: 50%;
    top: 50%;
}

.promote_sn_box .inner_box {
    width: 520rpx;
    height: 700rpx;
    left: -300rpx;
    top: -420rpx;
    position: absolute;
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 40rpx;
    text-align: center;
}

.promote_sn_box input {
    margin-top: 30rpx;
    border-bottom: 1px solid #ce3c39;
    line-height: 80rpx;
    height: 80rpx;
    color: #ce3c39;
    font-size: 36rpx;
}

.promote_sn_box button {
    margin-top: 50rpx;
}

.promote_sn_box .rule {
    text-align: left;
    margin-top: 30rpx;
    line-height: 48rpx;
    font-size: 24rpx;
}

.promote_sn_box .inviter image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    vertical-align: text-bottom;
}

.promote_sn_box .inviter view {
    font-size: 32rpx;
    line-height: 70rpx;
}

.itemcont {
    text-align: center;
    margin: 10rpx 50rpx 48rpx 50rpx;
}

.line {
    display: inline-block;
    height: 2rpx;
    width: 80rpx;
    background: #eee;
    vertical-align: middle;
    margin: 0 30rpx;
}

.paybox {
    position: fixed;
    background: #fff;
    width: 100%;
    bottom: 0;
    border-radius: 20rpx 20rpx 0 0;
    z-index: 33;
}

.paytitle {
    text-align: center;
    margin: 30rpx 0;
    font-size: 30rpx;
}

.icont {
    width: 68rpx;
    height: 68rpx;
    margin-bottom: 10rpx;
}

.paycont {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}