@charset "UTF-8";

.detail-tab-bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 140rpx;
    background: #fff;
    text-align: center;
    border-top: 1rpx solid #ebebeb;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.detail-tab-bar .product-detail-recommend {
    height: 100rpx;
    padding: 0 40rpx;
    border-radius: 60rpx;
    line-height: 60rpx;
    -webkit-box-flex: 1;
    flex: 1;
    font-size: 28rpx;
    text-align: center;
    line-height: 55rpx;
    color: #fff;
    background: #ff393b;
    margin: 20rpx 0 0 20rpx;
}

.detail-tab-bar .store_prod {
    width: 120rpx;
    text-align: center;
    padding-top: 20rpx;
    font-size: 24rpx;
}

.detail-tab-bar .store_prod icon {
    font-size: 60rpx;
}

.detail-tab-bar .favored {
    color: #0063d3;
}

.detail-tab-bar .favored icon {
    color: #0063d3;
}